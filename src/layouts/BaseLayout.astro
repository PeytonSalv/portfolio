---
import '../styles/global.css';
import TopNav from '../components/TopNav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'Personal portfolio and research', ogImage } = Astro.props;
const resolvedOgImage = ogImage ? `https://peytonsalvant.vercel.app${ogImage}` : 'https://peytonsalvant.vercel.app/og-image.png';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph / Social sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={resolvedOgImage} />
    <meta property="og:url" content="https://peytonsalvant.vercel.app" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={resolvedOgImage} />

    <!-- Fonts: Inter (headings), Source Serif 4 (body), IBM Plex Mono (captions) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=Inter:wght@500;600&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;1,8..60,400&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>

    <TopNav />

    <main id="main">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
    padding-top: var(--space-16);
    padding-bottom: var(--space-24);
  }

  @media (max-width: 768px) {
    main {
      padding-top: var(--space-10);
      padding-bottom: var(--space-16);
    }
  }
</style>
