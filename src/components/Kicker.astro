---
interface Props {
  number?: string;
  class?: string;
}

const { number, class: className = '' } = Astro.props;
---

<span class:list={['kicker', className]}>
  {number && <span class="kicker-number">{number}</span>}
  <slot />
</span>

<style>
  .kicker {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--accent);
    margin-bottom: var(--space-3);
  }

  .kicker-number {
    color: var(--accent);
  }
</style>
