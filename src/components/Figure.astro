---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  caption?: string;
  number?: number;
  class?: string;
}

const { src, alt, caption, number, class: className = '' } = Astro.props;
const figureId = number ? `fig-${number}` : undefined;
---

<figure id={figureId} class:list={['figure', className]}>
  <div class="figure-exhibit">
    {typeof src === 'string' ? (
      <img src={src} alt={alt} loading="lazy" />
    ) : (
      <Image src={src} alt={alt} loading="lazy" />
    )}
  </div>
  {(caption || number) && (
    <figcaption class="figure-caption">
      {number && <span class="figure-number">Fig {number}</span>}
      {caption && <span class="figure-text">{caption}</span>}
    </figcaption>
  )}
</figure>

<style>
  .figure {
    margin: var(--space-12) 0;
    width: 100%;
  }

  .figure-exhibit {
    background-color: var(--figure-bg);
    padding: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .figure-exhibit img {
    width: 100%;
    height: auto;
    display: block;
  }

  .figure-caption {
    display: flex;
    gap: var(--space-3);
    align-items: baseline;
  }

  .figure-number {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--accent);
    flex-shrink: 0;
  }

  .figure-text {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--muted);
    line-height: var(--leading-normal);
  }

  @media (max-width: 768px) {
    .figure-exhibit {
      padding: var(--space-4);
      margin-left: calc(-1 * var(--container-padding));
      margin-right: calc(-1 * var(--container-padding));
    }
  }
</style>
