---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['evaluation-panel', className]} data-evaluation-panel>
  <div class="eval-header">
    <span class="eval-label">Evaluation</span>
  </div>

  <div class="eval-metrics">
    <div class="eval-metric" data-metric="retrievalRecall">
      <div class="metric-header">
        <span class="metric-name">Retrieval Recall</span>
        <span class="metric-indicator" data-indicator="good"></span>
      </div>
      <div class="metric-bar">
        <div class="metric-fill" data-fill style="width: 70%;"></div>
      </div>
      <span class="metric-hint">Are relevant docs being found?</span>
    </div>

    <div class="eval-metric" data-metric="contextRelevance">
      <div class="metric-header">
        <span class="metric-name">Context Relevance</span>
        <span class="metric-indicator" data-indicator="good"></span>
      </div>
      <div class="metric-bar">
        <div class="metric-fill" data-fill style="width: 65%;"></div>
      </div>
      <span class="metric-hint">Is the context on-topic?</span>
    </div>

    <div class="eval-metric" data-metric="answerGrounding">
      <div class="metric-header">
        <span class="metric-name">Answer Grounding</span>
        <span class="metric-indicator" data-indicator="medium"></span>
      </div>
      <div class="metric-bar">
        <div class="metric-fill" data-fill style="width: 55%;"></div>
      </div>
      <span class="metric-hint">Is the answer supported by context?</span>
    </div>

    <div class="eval-metric" data-metric="confidence">
      <div class="metric-header">
        <span class="metric-name">Confidence</span>
        <span class="metric-indicator" data-indicator="good"></span>
      </div>
      <div class="metric-bar">
        <div class="metric-fill" data-fill style="width: 60%;"></div>
      </div>
      <span class="metric-hint">Model certainty vs actual correctness</span>
    </div>
  </div>

  <div class="eval-summary" data-eval-summary>
    <span class="summary-text">System performing within expected parameters</span>
  </div>
</div>

<style>
  .evaluation-panel {
    padding: var(--space-4);
    background: var(--bg-figure);
    border: 1px solid var(--rule);
    border-radius: 4px;
  }

  .eval-header {
    margin-bottom: var(--space-4);
  }

  .eval-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .eval-metrics {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
  }

  @media (max-width: 640px) {
    .eval-metrics {
      grid-template-columns: 1fr;
    }
  }

  .eval-metric {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .metric-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .metric-name {
    font-family: var(--font-mono);
    font-size: 10px;
    color: var(--text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .metric-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--positive);
    transition: background var(--transition-fast);
  }

  .metric-indicator[data-indicator="good"] {
    background: var(--positive);
  }

  .metric-indicator[data-indicator="medium"] {
    background: #eab308;
  }

  .metric-indicator[data-indicator="poor"] {
    background: var(--negative);
  }

  .metric-bar {
    height: 4px;
    background: var(--rule);
    border-radius: 2px;
    overflow: hidden;
  }

  .metric-fill {
    height: 100%;
    background: var(--accent);
    border-radius: 2px;
    transition: width 0.4s ease, background 0.3s ease;
  }

  .metric-fill[data-state="poor"] {
    background: var(--negative);
  }

  .metric-fill[data-state="medium"] {
    background: #eab308;
  }

  .metric-hint {
    font-family: var(--font-mono);
    font-size: 9px;
    color: var(--muted);
  }

  .eval-summary {
    margin-top: var(--space-4);
    padding-top: var(--space-3);
    border-top: 1px solid var(--rule);
  }

  .summary-text {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--muted);
  }

  .summary-text.warning {
    color: #eab308;
  }

  .summary-text.error {
    color: var(--negative);
  }
</style>
