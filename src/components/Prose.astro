---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['prose', className]}>
  <slot />
</div>

<style>
  .prose {
    max-width: var(--content-width);
  }

  /* Headings - Inter with tight tracking */
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    font-family: var(--font-heading);
    letter-spacing: var(--tracking-tight);
    color: var(--text);
  }

  .prose :global(h1) {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-6);
  }

  .prose :global(h2) {
    font-size: var(--text-xl);
    margin-top: var(--space-16);
    margin-bottom: var(--space-4);
  }

  .prose :global(h2:first-child) {
    margin-top: 0;
  }

  .prose :global(h3) {
    font-size: var(--text-lg);
    margin-top: var(--space-10);
    margin-bottom: var(--space-3);
  }

  /* Paragraphs - Source Serif */
  .prose :global(p) {
    margin-bottom: var(--space-4);
    line-height: var(--leading-normal);
    color: var(--text-secondary);
  }

  .prose :global(p:last-child) {
    margin-bottom: 0;
  }

  /* Lists */
  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
    color: var(--text-secondary);
  }

  .prose :global(li) {
    margin-bottom: var(--space-2);
    line-height: var(--leading-normal);
  }

  .prose :global(li::marker) {
    color: var(--muted);
  }

  /* Links */
  .prose :global(a) {
    color: var(--text);
    text-decoration: underline;
    text-decoration-color: var(--rule-dark);
    text-decoration-thickness: 1px;
    text-underline-offset: 3px;
    transition: text-decoration-color var(--transition-fast);
  }

  .prose :global(a:hover) {
    text-decoration-color: var(--accent);
  }

  /* Code blocks */
  .prose :global(pre) {
    margin: var(--space-8) 0;
  }

  /* Inline code */
  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.85em;
    background-color: var(--accent-soft);
    padding: 0.2em 0.4em;
    border-radius: 2px;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }

  /* Images get exhibit treatment */
  .prose :global(img) {
    display: block;
    width: 100%;
    margin: var(--space-12) 0;
    background-color: var(--figure-bg);
    padding: var(--space-8);
  }

  /* Image alt as caption styling via em after img */
  .prose :global(img + em) {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-style: normal;
    color: var(--muted);
    margin-top: calc(-1 * var(--space-8));
    margin-bottom: var(--space-8);
  }

  /* Strong text */
  .prose :global(strong) {
    font-weight: 600;
    color: var(--text);
  }

  /* Horizontal rules */
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--rule);
    margin: var(--space-16) 0;
  }

  /* Tables */
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-8) 0;
    font-family: var(--font-heading);
    font-size: var(--text-sm);
  }

  .prose :global(th),
  .prose :global(td) {
    text-align: left;
    padding: var(--space-3) var(--space-4);
    border-bottom: 1px solid var(--rule);
  }

  .prose :global(th) {
    font-family: var(--font-mono);
    font-weight: 500;
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--muted);
  }

  .prose :global(td) {
    color: var(--text-secondary);
  }

  /* Blockquotes */
  .prose :global(blockquote) {
    border-left: 2px solid var(--accent);
    padding-left: var(--space-6);
    margin: var(--space-8) 0;
    font-style: italic;
    color: var(--muted);
  }

  .prose :global(blockquote p) {
    color: var(--muted);
  }

  @media (max-width: 768px) {
    .prose :global(img) {
      margin-left: calc(-1 * var(--container-padding));
      margin-right: calc(-1 * var(--container-padding));
      width: calc(100% + 2 * var(--container-padding));
      padding: var(--space-4);
    }
  }
</style>
